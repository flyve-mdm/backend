{% if number < 1 %}
   <div class='center'>
      <table class='tab_cadre_fixe'>
      <tr><th>{{ __('There is no task status yet', 'flyvemdm') }}</th></tr>
      </table>
   </div>
   <br>
{% else %}
   {{ pager|raw }}
   <div class='center'>
      <table class='tab_cadre_fixehov'>
         <tr>
            <th>{{ __('Policy', 'flyvemdm') }}</th>
            <th>{{ __('Status', 'flyvemdm') }}</th>
            <th>{{ __('Count', 'flyvemdm') }}</th>
         </tr>
         {% for taskstatus in taskstatuses %}
         {% if loop.index > start and loop.index <= stop %}
            <tr class='tab_bg_2'>
               <td><div class="center">{{ __(taskstatus.name, 'flyvemdm') }}</div></td>
               <td><div class="center">{{ __(taskstatus.status, 'flyvemdm') }}</div></td>
               <td><div class="center">{{ taskstatus.c }}</div></td>
            </tr>
         {% endif %}
         {% endfor %}
         <tr>
            <th>{{ __('Policy', 'flyvemdm') }}</th>
            <th>{{ __('Status', 'flyvemdm') }}</th>
            <th>{{ __('Count', 'flyvemdm') }}</th>
         </tr>
      </table>
   </div>
{% endif %}